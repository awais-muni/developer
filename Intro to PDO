    <meta charset="UTF-8">
    <title>Document</title>

</head>

<body>

    <ul>

        <?php foreach ($tasks as $task): ?>
            <li>
                <?php if ($task->completed): ?>
                    <strike>
                <?= $task->description; ?>
                        <?php if ($task->completed): ?>
                        </strike>
                <?php endif; ?>
            </li>
        <?php endforeach; ?>
    </ul>
</body>

</html>



